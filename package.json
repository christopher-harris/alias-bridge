{
  "name": "alias-bridge",
  "version": "1.0.0",
  "description": "Cross platform terminal alias manager",
  "main": "dist-electron/main.js",
  "scripts": {
    "tsc:electron": "tsc -p electron-main/tsconfig.json",
    "tsc:electron:watch": "tsc -p electron-main/tsconfig.json --watch",
    "ng:serve": "cd angular-ui && ng serve",
    "ng:build": "cd angular-ui && ng build --configuration production --base-href ./",
    "electron:start:dev": "electron .",
    "start": "npm run tsc:electron && concurrently -k \"npm:ng:serve\" \"npm:tsc:electron:watch\" \"wait-on http://localhost:4200 && npm run electron:start:dev\"",
    "electron:package": "electron-builder",
    "build": "npm run ng:build && npm run tsc:electron && npm run electron:package"
  },
  "keywords": [],
  "author": "Chris Harris",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.aliasbridge",
    "productName": "AliasBridge",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist-electron/**/*",
      "dist/angular-ui/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  }
}
